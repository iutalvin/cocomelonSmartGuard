<resources>
    <!-- Base application theme for dark mode -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Set the primary and surface colors using your app's colors -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/purple_background</item>
        <item name="colorOnPrimary">@color/colorLight</item>
        <item name="colorSurface">@color/backgroundLight</item>
        <item name="android:statusBarColor">@color/green</item>
        <!-- Set a default text color for dark mode -->
        <item name="android:textColorPrimary">#FFFFFF</item>
    </style>
</resources>
